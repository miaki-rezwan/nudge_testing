                android:name="SMT_COMPOSE_ACTIVITY"
                android:value="true" />
        </activity>
        <activity android:name=".ProfileActivity" android:exported="true" >
            <meta-data
                android:name="SMT_COMPOSE_ACTIVITY"
                android:value="true" />
        </activity>

        <activity android:name=".CartActivity" android:exported="true" >
            <meta-data
                android:name="SMT_COMPOSE_ACTIVITY"
                android:value="true" />
        </activity>

        <activity android:name=".DashboardActivity" android:exported="true" >
            <meta-data
                android:name="SMT_COMPOSE_ACTIVITY"
                android:value="true" />
        </activity>

    </application>

</manifest>